<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/spacing_normal"
    android:paddingRight="@dimen/spacing_normal"
    android:paddingTop="@dimen/spacing_normal">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/pickListPackageRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/spacing_smaller" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/packageCodeInput"
            style="@style/Button.Primary"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_normal"
            android:layout_marginBottom="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_weight="1"
            android:text="@string/action_input"
            android:textSize="22dp" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/packageCodeScanner"
            style="@style/Button.Primary"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height_normal"
            android:layout_marginBottom="@dimen/spacing_small"
            android:layout_marginLeft="@dimen/spacing_small"
            android:layout_marginTop="@dimen/spacing_small"
            android:layout_weight="1"
            android:text="@string/action_scanner"
            android:textSize="22dp" />
    </LinearLayout>
</LinearLayout>